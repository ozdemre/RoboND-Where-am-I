<?xml version="1.0"?>
<launch>

  <!-- Map server -->
  <arg name="map_file" default="$(find ozdemre_bot)/maps/jackal_race.yaml"/>
  <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

  <!-- Localization-->
  <node pkg="amcl" type="amcl" name="amcl" output="screen">
    <remap from="scan" to="ozdemre_bot/laser/scan"/>
    <param name="odom_frame_id" value="odom"/>
    <param name="odom_model_type" value="diff-corrected"/>
    <param name="base_frame_id" value="robot_footprint"/>
    <param name="global_frame_id" value="map"/>

	<!--Filter -->
		<param name="min_particles" value="10" />
		<param name="max_particles" value="50" />
		<param name="update_min_a" value="0.005" />
		<param name="update_min_d" value="0.01" />

	<!--Laser -->
		<param name="laser_max_beams" value="20" />
		<param name="lazer_z_rand" value="0.05" />
		<param name="lazer_z_hit" value="0.95" />
		<param name="laser_model_type" value="likelihood_field"/>

	<!--Odometry -->
		<param name="odom_alpha1" value="0.02" />
		<param name="odom_alpha2" value="0.02" />
		<param name="odom_alpha3" value="0.02" />
		<param name="odom_alpha4" value="0.02" />

  </node>

<!-- Move base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find ozdemre_bot)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ozdemre_bot)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ozdemre_bot)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ozdemre_bot)/config/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ozdemre_bot)/config/base_local_planner_params.yaml" command="load" />

    <remap from="cmd_vel" to="cmd_vel"/>
    <remap from="odom" to="odom"/>
    <remap from="scan" to="ozdemre_bot/laser/scan"/>

    <param name="base_global_planner" type="string" value="navfn/NavfnROS" />
    <param name="base_local_planner" value="base_local_planner/TrajectoryPlannerROS"/>

  </node>


</launch>

